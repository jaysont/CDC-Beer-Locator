		</View>
		<View id="brandView">
			<ImageView id="brandSelectImage"/>
			<Label id="brandLabel"/>
			<ImageView id="arrowBrand"/>
		</View>
		<View id="packageView">
			<ImageView id="packageSelectImage"/>
			<Label id="packageLabel"/>
